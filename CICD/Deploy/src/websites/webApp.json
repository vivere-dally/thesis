[
  {
    "Suffix": "api",
    "Property": {
      "AlwaysOn": true,
      "HttpsOnly": true,
      "MinTlsVersion": "1.2",
      "FtpsState": "Disabled",
      "Use32BitWorkerProcess": false,
      "Http20Enabled": true,
      "WebSocketsEnabled": true
