pipeline {
    agent {
        label 'master'
    }

    environment {
        BuildMetadata = VersionNumber(versionNumberString: '${BUILD_DATE_FORMATTED, "yyD"}.${BUILDS_ALL_TIME, XXXX}', worstResultForIncrement: 'SUCCESS')
    }

    options {
        copyArtifactPermission 'thesis-deploy'
    }

    parameters {
        choice(choices: ['', 'Patch', 'Minor', 'Major'], description: 'Specifies the Release type.', name: 'Release')
        choice(choices: ['', 'alpha', 'beta', 'rc'], description: 'Specifies the Prerelease type.', name: 'Prerelease')
        booleanParam(defaultValue: true, description: 'Use the existing npm_modules.', name: 'UseCommonNpmModules')
        string(defaultValue: 'E:/Dev/npm/node_modules', description: 'Path to the shared npm_modules.', name: 'CommonNpmModules', trim: true)
    }

    stages {
        stage ('Init') {
            steps {
                script {
                    if (!binding.hasVariable('Release')) {
                        env.Release = ''
                    }

                    if (!binding.hasVariable('Prerelease')) {
                        env.Prerelease = ''
                    }

                    if (!binding.hasVariable('UseCommonNpmModules')) {
                        env.UseCommonNpmModules = true
                    }

                    if (!binding.hasVariable('CommonNpmModules')) {
                        env.CommonNpmModules = 'E:/Dev/npm/node_modules'
                    }

                    def output = powershell(returnStdout: true, script: '''
                        ('./Server/thesis' | Resolve-Path).Path
                        ('./Client/thesis' | Resolve-Path).Path
                    ''').tokenize('\n')

                    env.BackendAbsolutePath = output[0].trim()
                    env.FrontendAbsolutePath = output[1].trim()
                    env.ProjectVersion = powershell(returnStdout: true, script: '''
                        ./CICD/Build/Init.ps1 `
                            -BackendAbsolutePath $env:BackendAbsolutePath `
                            -Release $env:Release `
                            -Prerelease $env:Prerelease `
                            -BuildMetadata $env:BuildMetadata
                    ''')
                }
            }
        }

        stage ('Build') {
            steps {
                script {
                    env.UseCommonNpmModules = env.UseCommonNpmModules.toBoolean()
                }

                powershell '''
                    ./CICD/Build/Build.ps1 `
                        -BackendAbsolutePath $env:BackendAbsolutePath `
                        -FrontendAbsolutePath $env:FrontendAbsolutePath `
                        -ProjectVersion $env:ProjectVersion `
                        -UseCommonNpmModules $env:UseCommonNpmModules `
                        -CommonNpmModulesPath $env:CommonNpmModulesPath
                '''
            }
        }

        stage ('Test') {
            steps {
                powershell '''
                    ./CICD/Build/Test.ps1 `
                        -BackendAbsolutePath $env:BackendAbsolutePath `
                        -FrontendAbsolutePath $env:FrontendAbsolutePath
                '''
            }

            post {
                always {
                    junit 'Server/thesis/target/surefire-reports/*.xml'
                }
            }
        }

        stage ('Artifacts') {
            steps {
                archiveArtifacts artifacts: 'Server/thesis/target/*.jar', fingerprint: true
                archiveArtifacts artifacts: 'Client/thesis/*.zip', fingerprint: true
            }
        }

        stage ('Tag') {
            when {
                expression {
                    params.Release
                }
            }

            steps {
                sshagent(['Thesis-Github-SSH']) {
                    powershell '''
                        ./CICD/Build/Tag.ps1 `
                            -BackendAbsolutePath $env:BackendAbsolutePath `
                            -FrontendAbsolutePath $env:FrontendAbsolutePath `
                            -ProjectVersion $env:ProjectVersion
                    '''
                }

                script {
                    // Keep this build forever
                    currentBuild.keepLog = true
                }
            }
        }
    }
}
