pipeline {
    agent {
        label 'master'
    }

    options {
        copyArtifactPermission 'thesisDeploy'
    }

    stages {
        stage ('Build') {
            steps {
                powershell '''
                    Set-Location -Path './Server/thesis'
                    & 'mvn' @('-B', '-DskipTests', 'clean', 'package')
                '''
            }
        }

        stage ('Test') {
            steps {
                powershell '''
                    Set-Location -Path './Server/thesis'
                    & 'mvn' @('test')
                '''
            }

            post {
                always {
                    junit 'Server/thesis/target/surefire-reports/*.xml'
                }
            }
        }

        stage ('Artifacts') {
            steps {
                archiveArtifacts artifacts: 'Server/thesis/target/*.jar', fingerprint: true
            }
        }
    }
}
